<Page x:Class="WpfApp4.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin" Height="400" Width="800" Background="AliceBlue">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <StackPanel>
                <Label Content="Введите логин" Margin="5,5,5,5" />
                <TextBox x:Name="txbLogin" Width="150" Margin="5,5,5,5"/>
                <Label Content="Введите пароль" Margin="5,5,5,5" />
                <PasswordBox x:Name="psbPassword" Width="150" Margin="5,5,5,5" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnToComeIn"  Content="Войти" Margin="5,5,5,5" Click="btnToComeIn_Click" />
                <Button x:Name="btnRegistration" Content="Регистрация" Margin="5,5,5,5" Click="btnRegistration_Click" />
            </StackPanel>
        </StackPanel>   
    </Grid>
</Page>
